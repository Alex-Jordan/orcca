                        \addplot[primarycurve,-] coordinates {(2000,17446) (2010,19727)} node[pos=0.4, pin=100:{rate $228.1$}]{};
                        \addplot[primarycurve,-] coordinates {(1999,17599) (2002,17887)} node[pos=0.5, pin=120:{rate $96$}]{};
