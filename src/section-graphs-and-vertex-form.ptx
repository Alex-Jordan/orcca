                                <col />
                                <col />
                                <col />
                                <col />
                                <row bottom="minor">
                                    <cell><m>t</m></cell>
                                    <cell><m>0</m></cell>
                                    <cell><m>5</m></cell>
                                    <cell><m>10</m></cell>
                                    <cell><m>15</m></cell>
                                    <cell><m>20</m></cell>
                                    <cell><m>25</m></cell>
                                </row>
                                <row>
                                    <cell><m>H(t)</m></cell>
                                    <cell><m>30500</m></cell>
                                    <cell><m>32100</m></cell>
                                    <cell><m>32900</m></cell>
                                    <cell><m>32900</m></cell>
