                        $picture = init_graph($xmin,$ymin,$xmax,$ymax,
                              pixels=>[240,240]);
                        $xTop = $x[0]+$bigbase;
                        $picture->lb( new Label($x[0]+$base/2, $y[0]-$yLabelShift,"$base m",'black','center','middle'));
                        $picture->lb( new Label($xTop-$xLabelShift,($y[0]+$y[1])/2,"$height m",'black','center','middle'));
