              <webwork>
                <setup>
                    <pg-code>
                      Context("Numeric");

                      $baseM = random(2,4,0.1);
                      $heightCM = random(50,150,10);
                      $heightM = $heightCM/100;

                      $baseMU = NumberWithUnits("$baseM m");
