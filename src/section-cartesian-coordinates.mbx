            <exercise>
                <webwork seed="1" >
                    <pg-macros>
                        <macro-file>PCCgraphMacros.pl</macro-file>
                    </pg-macros>
                    <setup>
                        <var name="$ans[0]"><static>(-8,5)</static></var>
                        <var name="$ans[1]"><static>(7,3)</static></var>
                        <var name="$ans[2]"><static>(0,-6)</static></var>
                        <var name="$ans[3]"><static>(4,0)</static></var>
                        <pg-code>
                            @px=map{($_==0)?9:$_-9}(NchooseK(18,4));
                            @py=map{($_==0)?9:$_-9}(NchooseK(18,4));
                            $px[2]=0;
                            $py[3]=0;
                            if($envir{problemSeed}==1){@px=(-8,7,0,4);@py=(5,3,-6,0);};
                            $xmin = -10;$xmax = 10;
                            $ymin = -10;$ymax = 10;
                            $xmark = 2;
                            $ymark = 2;
                            $gr = init_graph($xmin,$ymin,$xmax,$ymax,
                               axes=>[0,0],
                               grid=>[($xmax-$xmin)/$xmark,($ymax-$ymin)/$ymark],
