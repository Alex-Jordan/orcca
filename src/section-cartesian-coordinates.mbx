                <solution>
                    <figure>
                        <image>
                            <description></description>
                            <latex-image-code>
                            <![CDATA[\begin{tikzpicture}
                                \begin{axis}[xmin=-10,xmax=10,
                                            ymin=-10,ymax=10,
                                            xtick={-8,-6,...,8},
                                            ytick={-8,-6,...,8},
